<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FetchAndDisplay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:background="#ffffff">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/USER_PROFILE_IMAGE"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_FIRST_NAME_ID"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/USER_PROFILE_IMAGE"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FIRST_NAME_TEXT"
                android:layout_below="@id/USER_PROFILE_IMAGE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/FIRST_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/FIRST_NAME_TEXT"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_LAST_NAME_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_FIRST_NAME_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/LAST_NAME_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/LAST_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_DATE_OF_BIRTH_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_LAST_NAME_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DATE_OF_BIRTH_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Of Birth: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/DATE_OF_BIRTH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_GENDER_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_DATE_OF_BIRTH_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/GENDER_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/GENDER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_PHONE_NUMBER_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_GENDER_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PHONE_NUMBER_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/PHONE_NUMBER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_USER_NAME_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_PHONE_NUMBER_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/USER_NAME_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/USER_NAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_EMAIL_ID_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_USER_NAME_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/EMAIL_ID_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email ID: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/EMAIL_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LINEAR_LAYOUT_PASSWORD_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:layout_below="@id/LINEAR_LAYOUT_EMAIL_ID_ID"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/PASSWORD_TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password: "
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/PASSWORD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:paddingLeft="8dp"/>

        </LinearLayout>



        <Button
            android:id="@+id/SEE_FRIENS_LIST_BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:text="See Friends List"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/LINEAR_LAYOUT_PASSWORD_ID"
            android:layout_marginTop="80dp"
            android:textColor="#C5E79E"
            android:background="#8BC34A"
            android:onClick="onClickFriendsListButton"/>

        <Button
            android:id="@+id/UPDATE_PROFILE_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:text="Update Profile"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/SEE_FRIENS_LIST_BUTTON"
            android:layout_marginTop="10dp"
            android:textColor="#C5E79E"
            android:background="#8BC34A"
            android:onClick="onClickUpdateUserProfile"/>

        <Button
            android:id="@+id/LOG_OUT_BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="150dp"
            android:text="Log Out"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/UPDATE_PROFILE_ID"
            android:layout_marginTop="10dp"
            android:textColor="#C5E79E"
            android:background="#5B9C10"
            android:onClick="onClickLogOutButton"/>


    </RelativeLayout>

</ScrollView>